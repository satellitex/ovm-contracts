{
  "name": "ovm-contracts",
  "version": "0.1.0",
  "description": "OVM contracts",
  "main": "index.js",
  "directories": {
    "test": "test",
    "contracts": "contracts"
  },
  "scripts": {
    "prettier": "prettier --write contracts/**/*.sol contracts/*.sol",
    "build": "mkdir -p build && waffle waffle-config.json && tsc --build ./tsconfig.json",
    "deploy:dev": "npm run build && node build/scripts/scripts/deploy.js local",
    "test": "npm run build && mocha --require ts-node/register 'test/**/*.test.ts'"
  },
  "author": {
    "name": "Crypteconomics Lab",
    "url": "https://www.cryptoeconomicslab.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@openzeppelin/contracts": "^2.3.0",
    "@types/chai": "^4.2.5",
    "@types/jest": "^24.0.23",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^2.1.2",
    "ethers": "^4.0.33",
    "mocha": "^6.2.0",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.34",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2",
    "wakkanay": "git+https://github.com/cryptoeconomicslab/wakkanay.git"
  }
}
